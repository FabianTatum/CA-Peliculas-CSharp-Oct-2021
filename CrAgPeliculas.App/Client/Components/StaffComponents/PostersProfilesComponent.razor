@if(Staffs == null)
{
    <h1>Cargando...</h1>
}
else
{
    <div class="container-fluid bg-black p-0 p-lg-5">
        <div class="row">
            <div class="card-group">
                @foreach (var Staff in Staffs)
                {
                    <div class="col-sm-6 col-md-2 p-2">
                        <a href="/staff/@Staff.Id">
                        <div class="card bg-warning">
                            <img src=@Staff.ProfileImage class="card-img-top" alt=@Staff.Name>
                            <div class="card-body">
                                <h5 class="card-title fs-6">@Staff.Name</h5>
                                <p class="card-text"><small class="text-muted"></small></p>
                                @if (IsAdmin)
                                {
                                    <AdminPostersEditDelete Staff="Staff"/>
                                }
                            </div>
                        </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}


@code {

    [Parameter] public List<Staff> Staffs {get;set;}
    [Parameter] public bool IsAdmin {get;set;}
}